<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include android:id="@+id/device_details_actionbar"
        layout="@layout/include_action_bar"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/device_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabIndicatorHeight="1dp"
        app:tabIndicatorColor="@color/stv_divider"
        app:tabTextColor="@color/light_text_gray"
        app:tabSelectedTextColor="@color/base_color_text_white"
        app:tabTextAppearance="@style/TabLayoutTextViewStyle"
        app:tabBackground="@color/deepskyblue"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/device_details_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>