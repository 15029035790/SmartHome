<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar"/>

    <style name="AppTheme" parent="BaseAppTheme">
        <item name="android:colorPrimary">@color/deepskyblue</item>
        <item name="android:colorPrimaryDark">@color/deepskyblue</item>
        <item name="android:colorAccent">@color/deepskyblue</item>
        <item name="android:textColorPrimary">@color/deepskyblue</item>
        <item name="android:textColorHint">@color/lightgray</item>
        <item name="android:colorControlActivated">@color/deepskyblue</item>
        <item name="android:colorControlNormal">@color/lightgray</item>
        <item name="android:windowAnimationStyle">@style/AnimActivityTheme</item>
    </style>

    <style name="StatusTheme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:statusBarColor">@color/deepskyblue</item>
    </style>

    <style name="StartTheme" parent="@android:style/Theme.Material.Light.NoActionBar.Fullscreen">
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="AnimActivityTheme" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/zoom_in</item>
        <item name="android:windowExitAnimation">@anim/zoom_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/zoom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/zoom_out</item>
    </style>

    <style name="ActionBar">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@color/deepskyblue</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
    </style>

    <style name="ActionBarTitle">
        <item name="android:textSize">@dimen/base_action_bar_title_size</item>
        <item name="android:textColor">@color/base_color_text_white</item>
        <item name="android:gravity">left|center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">1.0dip</item>
    </style>

    <style name="Login_Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textColor">@color/base_color_text_white</item>
    </style>


    <style name="TabLayoutTextViewStyle" >
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="testStyle" parent="@style/Base.ThemeOverlay.AppCompat.Light">
        <item name="android:colorPrimary">@color/deepskyblue</item>
        <item name="android:colorPrimaryDark">@color/transparent</item>
        <item name="android:colorAccent">@color/lightblue</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="hintAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textColor">@color/deepskyblue</item>
    </style>

</resources>
